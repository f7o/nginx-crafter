{
  "http.host": "localhost",
  "http.port": 8080,
  "nginx" : {
    "config_dir": "/etc/nginx/",
    "cert_dir": "/etc/nginx/ssl/"
  },
  "crafter_server": {
    "print_config": false,
    "route_prefix": "/api"
  },
  "acme": {
    "enabled": true,
    "email": "mail@example.com",
    "server_uri": "acme://letsencrypt.org/staging",
    "agreement_url": "https://letsencrypt.org/documents/LE-SA-v1.1.1-August-1-2016.pdf",
    "acme_token_folder": "/etc/nginx/ssl/acme/acme-challenge"
  }
}